<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://m.daum.net"
        />

    <Button
        android:id="@+id/textButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strTextBtn1"
        ></Button>

    <Button
        android:id="@+id/textButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strTextBtn2"
        ></Button>

    <RadioGroup
        android:id="@+id/radioGp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/rdioBtn1"
            android:text="@string/strRadioBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/rdioBtn2"
            android:text="@string/strRadioBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/rdioBtn3"
            android:text="@string/strRadioBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:maxWidth="1000dp"
        android:maxHeight="1000dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:paddingTop="10dp"
        android:src="@drawable/ic_launcher_foreground"
        />

</LinearLayout>